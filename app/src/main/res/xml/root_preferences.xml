<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="그래프">

        <SwitchPreferenceCompat
            app:key="show_recent_blood"
            app:title="홈 화면 최근 혈당 표시"
            app:summary="홈 화면에서 최근 혈당 기록 표시 여부를 설정합니다."
            app:defaultValue="true" />

        <EditTextPreference
            app:key="blood_sugar_threshold"
            app:title="혈당 기준치 설정"
            app:summary="그래프 기준선을 표시할 기준치를 설정하세요"
            app:defaultValue="140" />

        <SwitchPreferenceCompat
            app:key="chart_animation_enabled"
            app:title="그래프 애니메이션"
            app:summary="혈당 그래프를 부드럽게 표시할지 설정" />

    </PreferenceCategory>
    <PreferenceCategory app:title="알림">
        <SwitchPreferenceCompat
            app:key="alarm_sound_enabled"
            app:title="알림음 재생"
            app:summary="알림 수신 시 소리를 재생합니다"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="alarm_vibration_enabled"
            app:title="진동 사용"
            app:summary="알림 수신 시 진동을 울립니다"
            app:defaultValue="true" />

    </PreferenceCategory>
